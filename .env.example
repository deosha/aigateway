# =============================================================================
# AI Gateway Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# Works on: macOS, Linux, Windows (Docker Desktop)
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development  # development | staging | production

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable platform features
FEATURE_ADMIN_UI=true
FEATURE_AGENT_GATEWAY=true
FEATURE_SEMANTIC_CACHE=false
FEATURE_WORKFLOW_ENGINE=false
FEATURE_POLICY_ROUTER=false
FEATURE_OBSERVABILITY=true
FEATURE_LOCAL_MODELS=false        # Ollama integration
FEATURE_GPU_STUB=true             # Show helpful errors when Ollama not running

# -----------------------------------------------------------------------------
# SSL/TLS Configuration
# -----------------------------------------------------------------------------
ENABLE_SSL=false
SSL_CERT_PATH=./certs/localhost.pem
SSL_KEY_PATH=./certs/localhost-key.pem

# -----------------------------------------------------------------------------
# LiteLLM Configuration
# -----------------------------------------------------------------------------
LITELLM_MASTER_KEY=sk-litellm-master-key-dev  # CHANGE IN PRODUCTION
LITELLM_PORT=4000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=litellm
POSTGRES_PASSWORD=litellm           # CHANGE IN PRODUCTION
POSTGRES_DB=litellm
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
ADMIN_API_PORT=8086
ADMIN_UI_PORT=5173
LANDING_UI_PORT=9999
JWT_SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
OTEL_ENDPOINT=http://otel-collector:4317
PROMETHEUS_PORT=9090
GRAFANA_PORT=3030
GRAFANA_ADMIN_PASSWORD=admin       # CHANGE IN PRODUCTION
JAEGER_PORT=16686

# -----------------------------------------------------------------------------
# AI Provider API Keys (Optional - configure as needed)
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Google (Gemini)
GOOGLE_API_KEY=
# OR for Vertex AI:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# VERTEX_PROJECT=your-gcp-project
# VERTEX_LOCATION=us-central1

# xAI (Grok)
XAI_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# AWS Bedrock
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION_NAME=us-east-1

# Azure OpenAI
AZURE_API_KEY=
AZURE_API_BASE=https://your-resource.openai.azure.com
AZURE_API_VERSION=2025-01-01-preview

# -----------------------------------------------------------------------------
# Local Models (Ollama)
# -----------------------------------------------------------------------------
# Ollama runs on host, Docker connects via:
# - Mac/Windows: host.docker.internal:11434
# - Linux: 172.17.0.1:11434 (or use host network mode)
OLLAMA_HOST=host.docker.internal
OLLAMA_PORT=11434

# -----------------------------------------------------------------------------
# Resource Limits (for production)
# -----------------------------------------------------------------------------
LITELLM_MEMORY_LIMIT=2g
LITELLM_CPU_LIMIT=2
POSTGRES_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=512m

# -----------------------------------------------------------------------------
# Networking
# -----------------------------------------------------------------------------
# External ports (change if conflicts)
EXTERNAL_HTTP_PORT=80
EXTERNAL_HTTPS_PORT=443

# AI Gateway Demo - Complete Configuration
# Copy to terraform.tfvars and fill in your values
project_id = "your-gcp-project-id"
region     = "asia-south1"

# AWS Configuration (Route53 + Bedrock)
aws_region = "ap-south-1"
domain     = "yourdomain.com"
subdomain  = "gateway"

# API Keys (use environment variables: TF_VAR_openai_api_key, etc.)
openai_api_key    = ""
anthropic_api_key = ""
xai_api_key       = ""
google_api_key    = ""
deepseek_api_key  = ""

# AWS Credentials for Bedrock (optional)
aws_access_key_id     = ""
aws_secret_access_key = ""

# Vertex AI
vertex_project = ""

# Gateway Configuration
litellm_master_key = "sk-change-me-secure-key"
letsencrypt_email  = "admin@yourdomain.com"
grafana_password   = "change-me-secure-password"

# =============================================================================
# Environment Sizing (change these for prod)
# =============================================================================
environment         = "demo"
replicas            = 1
litellm_replicas    = 1
min_replicas        = 1
max_replicas        = 3
deletion_protection = false

# For PRODUCTION, use these instead:
# environment         = "prod"
# replicas            = 2
# litellm_replicas    = 3
# min_replicas        = 2
# max_replicas        = 10
# deletion_protection = true
